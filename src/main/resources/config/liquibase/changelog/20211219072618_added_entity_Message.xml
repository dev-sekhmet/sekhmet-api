<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--
        Added the entity Message.
    -->
    <changeSet id="20211219072618-1" author="jhipster">
        <createTable tableName="message">
            <column name="id" type="${uuidType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="file" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="content_type_media" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="video" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="audio" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="system" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="sent" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="received" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="pending" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="chat_id" type="${uuidType}">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="${uuidType}">
                <constraints nullable="false"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>
</databaseChangeLog>
