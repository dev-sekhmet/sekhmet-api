<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Message.
    -->
    <changeSet id="20211219072618-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="chat_id"
                                 baseTableName="message"
                                 constraintName="fk_message__chat_id"
                                 referencedColumnNames="id"
                                 referencedTableName="chat"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="message"
                                 constraintName="fk_message_user"
                                 referencedColumnNames="id"
                                 referencedTableName="skh_user"/>

        <addUniqueConstraint columnNames="id" constraintName="UC_MESSAGEID_COL" tableName="message"/>
    </changeSet>
</databaseChangeLog>
